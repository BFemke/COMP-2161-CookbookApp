<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="25dip" android:gravity="center" >
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke android:width="4dp"
                    android:color="?attr/colorSecondaryContainer" />
            </shape>
        </rotate>
    </item>
    <item android:width="25dip" android:gravity="center">
        <shape android:shape="line">
            <stroke android:width="4dp" android:color="?attr/colorSecondaryContainer" />
        </shape>
    </item>
    <item android:width="25dip" android:gravity="center">
        <shape android:shape="line">
            <stroke android:width="3dp" android:color="?attr/colorOnSecondary" />
        </shape>
    </item>
    <item android:width="25dip" android:gravity="center" >
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke android:width="3dp"
                    android:color="?attr/colorOnSecondary" />
            </shape>
        </rotate>
    </item>
</layer-list>